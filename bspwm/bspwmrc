#! /bin/sh
# Autostart
bspc rule -r "*"

pkill picom
pkill polybar
pkill sxhkd
pkill dunst
pkill feh


xrdb -load ~/.Xresources &

sxhkd &
dunst &

systemctl --user --now start greenclip.service &

bash ~/.config/polybar/launch.sh &
picom --config /home/kishan/.config/picom/picom.conf -bCG &
feh --bg-fill --no-fehbg ~/.config/wall.png &
xsetroot -cursor_name left_ptr &
xset r rate 400 44


bspc monitor -d web code media article lab

# Global Settings
bspc config automatic_scheme spiral
bspc config pointer_modifier shift
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

bspc config focus_follows_pointer true


# BSPWM colors
# bspc config normal_border_color "$color1"
# bspc config active_border_color "$color2"
# bspc config focused_border_color "$color15"
# bspc config presel_feedback_color "$color1"


bspc config presel_border_color "#47ff9d"


# bspc config normal_border_color "#08090b"
# bspc config active_border_color "#08090b"
# bspc config focused_border_color "#161920"
# bspc config presel_feedback_color "#08090b"


bspc config normal_border_color "#70159b"
bspc config active_border_color "#70159b"
bspc config focused_border_color "#bd5fe9"
#bspc config presel_feedback_color "#47ff9d"



# Borders and Gaps
bspc config border_radius       10
bspc config border_width         1
bspc config window_gap          5

bspc config bottom_padding 0
bspc config top_padding 25

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config click_to_focus       true


#bspc config external_rules_command "$(which /home/kishan/.config/bspwm/bspwm-rules)"

bspc rule -a firefox desktop="web"
bspc rule -a urxvt state=floating follow=on
bspc rule -a mpv desktop="media" state=floating follow=on
bspc rule -a discord desktop="media" state=pseudo_tiled follow=off
bspc rule -a feh state=floating

